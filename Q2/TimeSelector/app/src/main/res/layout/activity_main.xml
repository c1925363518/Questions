<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="StartTime"/>


        <com.cc.timeselector.XCDropDownListView
            android:id="@+id/drop_down_list_view1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_marginLeft="@dimen/x15"/>

        <com.cc.timeselector.XCDropDownListView
            android:id="@+id/drop_down_list_view2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_marginLeft="@dimen/x15"/>

        <com.cc.timeselector.XCDropDownListView
            android:id="@+id/drop_down_list_view3"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_marginLeft="@dimen/x15"/>
    </LinearLayout>


    <View
    android:layout_width="match_parent"
    android:layout_height="@dimen/x15"
    android:background="@color/gray_light_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="ClosingTime"/>


        <com.cc.timeselector.XCDropDownListView
            android:id="@+id/drop_down_list_view4"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_marginLeft="@dimen/x15"/>

        <com.cc.timeselector.XCDropDownListView
            android:id="@+id/drop_down_list_view5"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_marginLeft="@dimen/x15"/>

        <com.cc.timeselector.XCDropDownListView
            android:id="@+id/drop_down_list_view6"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_marginLeft="@dimen/x15"/>

    </LinearLayout>


</LinearLayout>







